{
  "name": "SecureIT",
  "short_name": "SCIT",
  "description": "A simple app that manages your passwords locally.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup":"UI/Index.html"
  },
  "permissions": ["activeTab", "tabs","scripting","storage","webNavigation"],
  "web_accessible_resources": [
    {
      "resources": ["Encrypt/Encrypt.js","Helpers/Helpers.js","Styles/popup.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["Injected/Scraper.js"],
      "type":"module"
    }
  ]
}
